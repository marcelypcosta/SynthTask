# Backend - Exemplo de .env (copie para backend/.env)

# Google Gemini
GEMINI_API_KEY=SUA_CHAVE_GEMINI_AQUI

# Bancos (usando nomes dos serviços do Docker)
DATABASE_URL=postgresql://sintask:sintask123@postgres:5432/sintask
MONGODB_URL=mongodb://mongodb:27017

# JWT
# JWT Secret Key
# IMPORTANTE: Gere uma chave aleatória e segura para produção
# Gere com: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=troque-esta-chave-em-producao

# Servidor
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# CORS
CORS_ORIGINS=*

# Jira OAuth (3LO)
JIRA_CLIENT_ID=seu_client_id_aqui
JIRA_CLIENT_SECRET=seu_client_secret_aqui
JIRA_REDIRECT_URI=http://localhost:3000/api/auth/callback/jira
